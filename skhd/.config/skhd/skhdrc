# Also see: /usr/local/Cellar/skhd/0.3.5/share/skhd/examples/skhdrc

# ----- Spaces -----
fn + alt + shift - n : yabai -m space --create
fn + alt + shift - k : yabai -m space --destroy
fn + alt + shift - h : yabai -m space --prev
fn + alt + shift - l : yabai -m space --next
fn + alt + shift - left : yabai -m space --move prev
fn + alt + shift - right : yabai -m space --move next
fn + alt + shift - 1 : yabai -m space --focus  1
fn + alt + shift - 2 : yabai -m space --focus  2
fn + alt + shift - 3 : yabai -m space --focus  3
fn + alt + shift - 4 : yabai -m space --focus  4
fn + alt + shift - 5 : yabai -m space --focus  5
fn + alt + shift - 6 : yabai -m space --focus  6
fn + alt + shift - 7 : yabai -m space --focus  7
fn + alt + shift - 8 : yabai -m space --focus  8
fn + alt + shift - 9 : yabai -m space --focus  9

# ----- Windows -----

# focus window in direction of focused window (options: north, east, south, west)
fn + alt - h : yabai -m window --focus            west
fn + alt - j : yabai -m window --focus            north
fn + alt - k : yabai -m window --focus            south
fn + alt - l : yabai -m window --focus            east

# swap window position and size with window in direction of focused window
fn + alt - left : yabai -m window --swap          west
fn + alt - right : yabai -m window --swap         east
fn + alt - up : yabai -m window --swap            north
fn + alt - down : yabai -m window --swap          south

# Whether a window is split vertically or horizontally with its parent node can be toggled as well.
fn + alt - m : yabai -m window --toggle             split
fn + alt - k : yabai -m window --toggle             zoom-parent
alt + shift - k : yabai -m window --toggle          zoom-fullscreen
alt + ctrl - 1 : yabai -m window --toggle           split
alt + ctrl + shift - h : yabai -m window --display  prev
alt + ctrl + shift - l : yabai -m window --display  next
alt + shift - h : yabai -m window --space           prev
alt + shift - l : yabai -m window --space           next

# ----- Miscellaneous -----
fn + shift - q : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"; skhd --reload
shift + alt - b : yabai -m window --toggle border
ctrl + alt - a : yabai -m space --layout bsp
ctrl + alt - d : yabai -m space --layout float